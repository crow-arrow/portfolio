{
    "version": 2,
    "builds": [
        {
            "src": "client/dist/**/*",
            "use": "@vercel/static",
            "config": {
                "distDir": "frontend/dist"
            }
        },
        {
            "src": "server/api/**/*.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server/api/$1"
        }
    ]
}